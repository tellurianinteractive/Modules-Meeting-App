@using System.Reflection
@inject IStringLocalizer<App> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@Localizer["AppName"] @AppVersion()</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fas fa-home" aria-hidden="true"></span>
                <span class="menu-label">@Localizer["Home"]</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="fas fa-user-cog" aria-hidden="true"></span>
                <span class="menu-label">@Localizer["Settings"]</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="clock">
                <span class="fas fa-clock" aria-hidden="true"></span>
                <span class="menu-label">@Localizer["Clock"]</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="clockadministration">
                <span class="fas fa-user-lock" aria-hidden="true"></span>
                <span class="menu-label">@Localizer["ClockAdministration"]</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="clockusers">
                <span class="fas fa-user-clock" aria-hidden="true"></span>                 
                <span class="menu-label">@Localizer["ClockUsers"]</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="documentation">
                <span class="fas fa-user-clock" aria-hidden="true"></span>
                <span class="menu-label">@Localizer["Documentation"]</span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="fas fa-info-circle" aria-hidden="true"></span>
                <span class="menu-label">@Localizer["About"]</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private string AppVersion()
    {
        var v = Assembly.GetExecutingAssembly().GetName().Version;
        return v is null ? string.Empty : $"{v.Major}.{v.Minor}.{v.Build}";
    }
}
