// When running locally, you can modify these settings inclucing changing the clock's name and password.
{
  // Uncomment line below for running locally. You can change port number from 5000 to other if you want. Only run http and not https, because there is no certificate and browsers require this for https. 
  //"Urls": "http://0.0.0.0:5000",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "Simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss "
      }
    }
  },
  "AllowedHosts": "*",
  "ClockServerOptions": {
    "Name": "Demo",
    "Password": "password",
    "StartTime": "06:00",
    "Duration": "15:00",
    "Speed": 5.5,
    "TimeZoneId": "Central Europe Standard Time",
    "Sounds": {
      "PlayAnnouncements": false,
      "StartSoundFilePath": "Sounds\\Ringtone.wav",
      "StopSoundFilePath": "Sounds\\Ringtone.wav"
    }
  }
}
