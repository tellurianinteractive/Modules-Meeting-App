{
  //"Urls": "http://*:5000",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "Simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss "
      }
    }
  },
  "AllowedHosts": "*",
  "ClockServerOptions": {
    "Name": "Demo",
    "Password": "password",
    "StartTime": "06:00",
    "Duration": "15:00",
    "Speed": 5.5,
    "TimeZoneId": "Central Europe Standard Time",
    "Sounds": {
      "PlayAnnouncements": false,
      "StartSoundFilePath": "Sounds\\Ringtone.wav",
      "StopSoundFilePath": "Sounds\\Ringtone.wav"
    }
  }
}
