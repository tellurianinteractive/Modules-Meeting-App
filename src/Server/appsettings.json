{
  // When running locally you must uncomment the "Urls" and "DisableHttps" settings.
  // You can change port number from 5000 to other if you want. 
  //"Urls": "http://0.0.0.0:5000",
  //"DisableHttps":  true, 
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "Simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss "
      }
    }
  },
  "AllowedHosts": "*",
  // When running locally you can configure the clock below. 
  // These settings are defaults, and you can change them from the app later or add additional clocks.
  "ClockServerOptions": {
    "Name": "Demo",
    "Password": "password",
    "StartTime": "06:00",
    "Duration": "15:00",
    "Speed": 5.5,
    "TimeZoneId": "Central Europe Standard Time"
  }
}
