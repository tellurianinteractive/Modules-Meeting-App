	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Client\App.Client.csproj" />
		<ProjectReference Include="..\Contract\Api.Contract.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="appsettings.Development.json" CopyToPublishDirectory="Never" />
